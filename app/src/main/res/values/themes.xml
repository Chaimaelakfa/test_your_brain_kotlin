<!-- styles.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Test_your_brain_personnel" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#031662</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <!-- Custom button style -->
    <style name="MyCustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">331dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">@color/boxColor</item>
        <item name="android:gravity">center</item>


    </style>
    <style name="MyCustomButtonStyleDEL" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">331dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">@color/colorOfAC</item>
        <item name="android:gravity">center</item>




    </style>
</resources>